{
  "name": "angular-electron-primeng",
  "version": "1.0.0",
  "description": "Angular 21 with Electron 40 (Typescript + Tailwind + PrimeNG + Hot Reload)",
  "homepage": "https://github.com/cesarhfborges/angular-electron-primeng",
  "author": {
    "name": "Cesar Borges",
    "email": "contato@chfb.com.br"
  },
  "keywords": [
    "angular",
    "angular 21",
    "electron",
    "electron 40",
    "PrimeNG",
    "PrimeNG 21",
    "Tailwind",
    "nodejs",
    "typescript",
    "vitest",
    "playwright",
    "eslint",
    "sass",
    "windows",
    "mac",
    "linux"
  ],
  "main": "app/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p electron:serve ng:serve",
    "ng:serve": "ng serve -c development -o",
    "build": "npm run electron:serve-tsc && ng build --base-href ./",
    "web:dev": "npm run build",
    "web:prod": "npm run build -- -c production",
    "electron": "electron",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && electron . --serve",
    "electron:local": "npm run web:dev && electron .",
    "electron:build": "npm run web:prod && electron-builder build --publish=never",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "e2e": "npm run web:prod && playwright test -c e2e/playwright.config.ts e2e/",
    "e2e:show-trace": "playwright show-trace e2e/tracing/trace.zip",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "ng lint"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.4",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@primeuix/themes": "^2.0.3",
    "@tailwindcss/postcss": "^4.1.12",
    "chart.js": "4.4.2",
    "primeclt": "^0.1.5",
    "primeicons": "^7.0.0",
    "primeng": "^21.1.1",
    "rxjs": "~7.8.0",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.2",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^21.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "electron-debug": "4.1.0",
    "electron-reloader": "1.2.3",
    "jsdom": "^27.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": ">= 22.12.0 || >= 24.0.0",
    "typescript": ">= 5.8.0 < 5.9.0"
  },
  "browserslist": [
    "chrome 140"
  ]
}
